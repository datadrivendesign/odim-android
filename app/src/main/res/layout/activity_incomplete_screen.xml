<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/incomplete_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/incomplete_screen_content_desc" />

    <edu.illinois.odim.IncompleteScreenCanvasOverlay
        android:id="@+id/incomplete_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm_gesture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/confirm_user_gesture"
        app:layout_constraintBottom_toBottomOf="@+id/incomplete_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/incomplete_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938" >
    </com.google.android.material.button.MaterialButton>
</androidx.constraintlayout.widget.ConstraintLayout>