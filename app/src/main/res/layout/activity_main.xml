<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/main_app_header"
        layout="@layout/app_bar_odim"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <TextView
        android:id="@+id/main_text_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/headerTextRed"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/MainTextHeader"
        app:layout_constraintTop_toBottomOf="@+id/main_app_header"
        app:layout_constraintBottom_toTopOf="@+id/package_recycler_view"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/package_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/main_text_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:listitem="@layout/recycler_row_main"/>
</androidx.constraintlayout.widget.ConstraintLayout>