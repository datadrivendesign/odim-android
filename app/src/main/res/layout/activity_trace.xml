<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <include
        android:id="@+id/trace_app_header"
        layout="@layout/app_bar_odim"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <LinearLayout
        android:id="@+id/trace_text_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="10dp"
        android:layout_marginStart="10dp"
        android:paddingBottom="5dp"

        app:layout_constraintTop_toBottomOf="@+id/trace_app_header"
        app:layout_constraintBottom_toTopOf="@+id/trace_recycler_view"
    >

        <ImageView
            android:id="@+id/trace_app_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:contentDescription="@string/trace_content_desc"
            android:src="@drawable/ic_baseline_chevron_right_24"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/trace_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/headerTextRed"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/app_name_placeholder" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trace_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/trace_text_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:divider="#f00"
        android:listSelector="#0f0"
        android:dividerHeight="1dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

